version: "3"
services:
  web:
    build:
      context: ./blog
    container_name: pireirik-web
    restart: always
    networks:
      net-pireirik:
        ipv4_address: 10.172.17.2

  nginx:
    image: nginx:stable
    container_name: pireirik-nginx
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./pireirik-nginx.conf:/etc/nginx/nginx.conf:ro
      - ./pireirik_com/pireirik.crt:/etc/nginx/certs/server.crt:ro
      - ./pireirik_com/pireirik.key:/etc/nginx/certs/server.key:ro
      - ./static:/usr/share/nginx/Pireirik:ro
    depends_on:
      - web
    restart: always
    networks:
      net-pireirik:
        ipv4_address: 10.172.17.3

networks:
  net-pireirik:
    ipam:
      config:
        - subnet: 10.172.17.0/24
